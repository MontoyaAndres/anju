{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NODE_ENV",
    "SERVER_PORT",
    "MCP_PORT",
    "DATABASE_URL",
    "JWT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_WEB_URL",
    "NEXT_PUBLIC_MCP_URL"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "dev": {
      "inputs": [".env"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "migrate-dev": {
      "cache": false
    },
    "migrate-prod": {
      "cache": false
    },
    "deploy-dev": {
      "cache": false
    },
    "deploy-prod": {
      "cache": false
    }
  }
}